{
  "name": "electionsmonitor",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:test": "eslint . --max-warnings 0",
    "test": "tsx --test ./election-results-listener/**/*.test.ts ./elections-client/src/**/*.test.ts",
    "test:coverage": "c8 -r=lcov -r=json-summary npm test",
    "check-coverage": "tsx ./infra/CI/check-coverage.ts",
    "upload-coverage": "tsx ./infra/CI/upload-coverage-s3.ts",
    "type-check": "tsc --noEmit",
    "upload-client": "node uploadClient.js",
    "build": "rm -rf dist && tsc",
    "clear-cache": "tsx ./infra/CD/cloudfront.ts",
    "update-lambda": "tsx ./infra/CD/update-lambda.ts",
    "update-s3": "tsx ./infra/CD/update-s3.ts",
    "update-env": "tsx ./infra/CD/update-env.ts",
    "test:ci": "npm run type-check && npm run test:coverage && npm run lint:test",
    "deploy": "sh ./infra/CD/deploy.sh",
    "build:client": "cd elections-client && npm ci && npm run build"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^25.1.0",
    "c8": "^11.0.0",
    "eslint": "^9.21.0",
    "globals": "^17.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.1000.0",
    "@aws-sdk/client-cloudfront": "^3.987.0",
    "@aws-sdk/client-lambda": "^3.987.0",
    "@aws-sdk/client-s3": "^3.1000.0",
    "@aws-sdk/lib-storage": "^3.987.0",
    "convict": "^6.2.4",
    "csv-parse": "^6.1.0",
    "encoding": "^0.1.13",
    "mime-types": "^3.0.2"
  },
  "overrides": {
    "fast-xml-parser": "4.1.2",
    "minimatch": "^10.2.2",
    "glob": "^13.0.6",
    "rimraf": "^5.0.5"
  }
}